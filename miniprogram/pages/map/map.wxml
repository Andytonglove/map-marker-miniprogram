<map id="map" longitude='{{longitude}}' latitude='{{latitude}}' style='height:{{windowHeight}}px' markers="{{stores}}"
  subkey="{{mapSubKey}}" show-compass="{{true}}" bindmarkertap="onMarkerTap" show-location="true" enable-building="true"
  enable-3D="true">


  <!-- 中心点标记点 -->
  <cover-view class="center">
    <cover-image style="" src="../../images/center-marker.png"></cover-image>
  </cover-view>
  
  <!-- 上方的添加提醒 -->
  <block wx:if="{{!hideMe}}">
    <cover-view class="add_me" bindtap="hideMe">添加到【我的小程序】更快找到我</cover-view>
    <cover-view class="up" bindtap="hideMe"></cover-view>
  </block>

  <!-- 查看全部 -->
  <cover-view class="button show_all" bindtap="viewAll" bindlongpress='showAdmin'>筑路日志</cover-view>

  <!-- 上传新增 -->s
  <cover-view class="cover">
    <button class='button' open-type='getUserInfo' bindgetuserinfo='addMarker'
      lang='zh_CN'>上传</button>
  </cover-view>

  <!-- 管理入口 -->
  <!-- <cover-view class="cover" wx:if="{{showAdmin}}">
    <button class='button' open-type='getUserInfo' bindgetuserinfo='getUserInfo' bindlongpress='getOpenID'
      lang='zh_CN'>上传</button>
  </cover-view> -->
 

</map>